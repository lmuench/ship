  <% @ticket.aasm.events(permitted: true).map(&:name).each do |event| -%>
    <%= button_to event, action: event %>
  <% end %>
  </div>
</div>

<div>
  <%= render 'form', ticket: @ticket %>
</div>

<%= link_to 'Back', tickets_path, class: 'button' %>
